# You may add here your
# server {
#	...
# }
# statements for each of your virtual hosts

server {
	listen   80 default;
	server_name  localhost;

	access_log  /var/log/nginx/localhost.access.log;

	root   /var/local/roar/static/html/;
	index  index.html index.htm;

	# because in the main roar directory structure we have /static/html and it links
	# to css files that are siblings in the directory tree, we need to rewrite those
	# so they work. 
        location ^~ /static/ {
                 root /var/local/roar/;
                 index index.html;
        }

